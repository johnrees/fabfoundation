.row
  .columns.large-12
    = search_form_for [:backstage, @q] do |f|
      = f.text_field :name_cont
      = f.submit

.row
  .columns.large-12
    %table
      %thead
        %tr
          %th.id= sort_link @q, :id
          %th= sort_link @q, :name
          %th= sort_link @q, :state
          %th= sort_link @q, :country
          %th= sort_link @q, :created_at
          %th= sort_link @q, :updated_at
      %tbody
      - @labs.each do |lab|
        %tr
          %td= lab.id
          %td= link_to lab, edit_backstage_lab_path(lab)
          %td= lab.state
          %td= lab.country
          %td= lab.created_at.stamp('13 Jun 99')
          %td= lab.updated_at.stamp('13 Jun 99')
