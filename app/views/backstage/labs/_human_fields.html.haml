.nested-fields
  %fieldset
    .row
      .columns.large-4
        = f.input :details, placeholder: 'e.g. Manager', label: "Job Role Details"
      .columns.large-8
        = f.input :full_name
      -# .columns.large-4
      -#   = f.association :user, input_html: { class: 'enhanced' }

    .row
      .columns.large-6
        = f.input :phone, placeholder: 'e.g. +44 (0) 1234 567890'
      .columns.large-6
        = f.input :email
        -# = f.input :roles

    = link_to_remove_association f, class: 'remove' do
      = fa_icon 'remove', text: "Remove this person"
