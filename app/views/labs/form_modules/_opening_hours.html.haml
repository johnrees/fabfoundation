%fieldset
  %legend= fa_icon "time", text: "Opening Hours"

  %table.opening-hours-chooser
    %tbody
      - [1,2,3,4,5,6,0].each_with_index do |index,count|
        %tr
          %th= I18n.t('date.abbr_day_names')[index]
          %td.text-right
            = f.input_field :thing, collection: %w(open_from 24hr closed), default: 'open_from', class: 'open_type', style: 'width: 90px'

            -# = label_tag do
            -#   = radio_tag :Closed, "", (count > 4), class: 'closed'
            -#   Closed
          %td= time_input :opening_time, (9.hours unless count > 4), class: 'hide-if-closed'
          %td.text-center.hide-for-small
            %span.hide-if-closed to
          %td= time_input :closing_time, (17.hours unless count > 4), class: 'hide-if-closed'

          %td.hide-for-small
            - if index == 1
              = link_to "Apply to All â†“", "#"

  = f.input :opening_hours_notes, hint: "Any additions to the above", placeholder: "e.g. Closed on the first monday of each month"
