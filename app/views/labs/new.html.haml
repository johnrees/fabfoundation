.row
  .large-12.columns
    = form_for @lab do |f|
      .field
        = f.label :name
        = f.text_field :name
      .row
        .columns.large-6
          .field
            = f.label :address
            = f.text_area :address
        .columns.large-6
          .field
            = f.label :address_notes
            = f.text_area :address_notes
      .actions
        = f.submit "Add Lab", class: 'button large'
