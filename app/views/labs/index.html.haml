= render "header"

:javascript
  var people = [{person: {id: 1, name: 'Jiren', age:26, country: 'India', country_id: 1,
                        states : [{ state : 'MH', state_id : 3 }, {state : 'HN', state_id : 4}] } },
              {person: {id: 2, name: 'Joe', age:25, country: 'USA', country_id: 2,
                        states : [{ state : 'MH', state_id : 3 }, {state : 'HN', state_id : 4}] } }
             ]
.row
  .columns.large-3.sidebar
    = render "sidebar"
  .columns.large-9.labs

    -# - if action_name == 'index'
    -#   .row
    -#     .columns.large-8.push-4.text-right
    -#       .sort
    -#         Sort by:
    -#         = sort_link @q, :name
    -#         = sort_link @q, :created_at, "Date Added"

    - @lab_countries.sort.each do |country, labs|
      %fieldset
        %legend
          .flag{class: "flag-#{country}"}
          = Country.new(country.upcase).name
        - labs.sort.each do |lab|
          = content_tag_for :div, lab, class: 'row' do
            .columns.large-12
              .row
                -# .columns.large-2
                -#   - if lab.avatar.blank?
                -#     = holder_tag 80
                -#   - else
                -#     = image_tag lab.avatar, width: 80, height: 80

                .columns.large-8.details
                  .name
                    = link_to lab, lab
                    -# = Time.now.in_time_zone(lab.time_zone).stamp("15:00")
                    -# %span.kind
                    -#   - if lab.kind.present?
                    -#     = Lab::Kinds[lab.kind]

                  .address.hint= fa_icon "map-marker", text: lab.short_address, class: 'icon-fixed-width'
                  -# .times.hint= fa_icon "time", text: 'Open 10:00 - 14:00', class: 'icon-fixed-width'
                .columns.large-4
                  - 3.times do |index|
                    - if lab.humans[index]
                      = image_tag lab.humans[index].user.avatar_image, width: 55, class: 'has-tip', data: {tooltip: true}, title: "#{lab.humans[index].user.full_name} - #{lab.humans[index].details}"
                    - else
                      = holder_tag 55
        = paginate @labs

%script#person_template{:type => "text/mustache"}
  <a href="/demo/{{id}}" title="{{name}}">
  <span class="name">{{name}}</span>
  <span class="age">{{age}}</span>
  <div class="country">{{country}}</div>
  </a>