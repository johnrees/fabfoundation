.search-box.large-centered
  .row
    .columns.large-7.hide-for-small
      = text_field_tag :name_or_city_cont, "", placeholder: "Instant Search...", autocomplete: 'off'
    .columns.large-4.small-12.text-right
      %ul.button-group.even-2
        %li
          = link_to labs_path, class: "button #{'inactive' unless action_name == 'index'}", style: 'border-radius: 4px 0 0 4px' do
            = fa_icon "list"
            List
        %li
          = link_to map_labs_path, class: "button #{'inactive' unless action_name == 'map'}", style: 'border-radius: 0 4px 4px 0' do
            = fa_icon "globe"
            Map
