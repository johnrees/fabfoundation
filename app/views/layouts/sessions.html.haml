%head
  %meta{ :charset => "utf-8" }/
  %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=7" }/
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
  %title= content_for?(:title) ? yield(:title) : "Fab Foundation"

  = stylesheet_link_tag "application"
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

%body.sessions
  .row
    .columns.large-12.text-right.account-yet
      %p= yield("account-yet")
  .row.hide-for-small
    .columns.large-12.large-centered.text-center
      = image_tag "small-fab.png", id: 'small-fab'
  .row
    .columns.large-5.large-centered
      - flash.each do |name, msg|
        = content_tag :div, "data-alert" => true, :id => "flash_#{name}", :class => "alert-box" do
          = msg
          = link_to "Ã—", "#", class: 'close'

  = yield
