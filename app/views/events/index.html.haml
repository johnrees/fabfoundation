.row
  .columns.large-3
    = render "sidebar", event: @event

  .columns.large-9
    = render "view_as"

    - @event_days.sort.each do |day, events|
      .row
        .columns.large-12
          .day
            %h3{data: { date: day.iso8601 }}= day.stamp("2nd August, 2013")
          - events.each do |event|

            = content_tag_for :div, event, class: 'row' do
              .columns.large-12
                .image
                  = image_tag event.image, width: 80, height: 80
                .details{style: "float: left"}
                  %h5= link_to event, event
                  = fa_icon "time"
                  = event.starts_at.stamp("3:00 AM")
                  = fa_icon "map-marker"
                  = link_to event.lab, event.lab
