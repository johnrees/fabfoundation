.row
  .columns.large-12
    %h1 Complete your Registration

    = simple_form_for @user, url: register_user_path(@user) do |f|
      = render "errors_for", resource: @user

      %fieldset
        = f.input :email, disabled: true
        = f.label :first_name, "Name"
        = f.input_field :first_name, placeholder: "First Name"
        = f.input_field :last_name, placeholder: "Last Name"

        = f.input :password

      = f.submit "Finish Registration", class: 'button'
