- content_for("account-yet") do
  Already registered? #{link_to "Sign in", signin_path}

.row
  .large-5.large-centered.columns

    = form_for @user do |f|
      - if @user.errors.any?
        .error_messages
          %h2 Form is invalid
          %ul
            - for message in @user.errors.full_messages
              %li= message
      .row
        .field
          = f.label :first_name
          = f.text_field :first_name, placeholder: 'First Name', autofocus: true
        .field
          = f.text_field :last_name, placeholder: 'Last Name'
      .row
        .columns-12
          .field
            = f.label :email
            = f.text_field :email, placeholder: 'Email', autocapitalize: "off", autocorrect: "off"

          -#   .field
          -#     = f.label :email
          -#     = f.text_field :email, placeholder: 'Email'

          -#   .field
          -#     = f.label :password
          -#     = f.password_field :password, placeholder: 'Password'

          -#   .field
          -#     = f.label :password_confirmation
          -#     = f.password_field :password_confirmation, placeholder: 'Confirmation'

      .actions= f.submit "Sign up", class: 'button '
