.row
  .columns.large-12
    = title "Forgot your password?"
    %p Please enter your email address below and we'll send you instructions for resetting your password.
    .row
      .columns.large-6
        = form_tag password_resets_path, method: :post do
          .field
            = label_tag :email
            = text_field_tag :email, params[:email], autofocus: true, autocapitalize: false
          .actions= submit_tag "Reset Password", class: 'button'
